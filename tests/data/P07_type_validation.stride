use DesktopAudio version 1.0

type TestType {
    typeName:   "testType"
    properties: [
            typeProperty StringPort {
                    name:       "stringPort"
                    types:      [_StringLiteral]
                    default:    ""
                    required:   on
            },
            typeProperty FloatPort {
                    name:       "floatPort"
                    types:      [_RealLiteral]
                    default:    0.0
                    required:   on
            },
            typeProperty NonePort {
                    name:       "nonePort"
                    types:      [_NoneLiteral]
                    required:   on
            },
            typeProperty AnyPort {
                    name:       "anyPort"
                    types:      [""]
                    required:   on
            },
            typeProperty BuiltinTypePort {
                    name:       "builtinTypePort"
                    types:      [_Signal]
                    required:   on
            },
            typeProperty BlockTypePort {
                    name:       "blockTypePort"
                    types:      [_Signal, _Constant, _NoneLiteral]
                    default:    none
                    required:   off
            }
    ]
}

signal Sig {}

testType Test {
    stringPort:         "right"
    floatPort:          1.0
    nonePort:           none
    builtinTypePort:    Sig
}

constant Const { value: 1.0 }

testType FailedTest {
    stringPort:         1.0
    floatPort:          "hello"
    nonePort:           1
    builtinTypePort:    Const
}
