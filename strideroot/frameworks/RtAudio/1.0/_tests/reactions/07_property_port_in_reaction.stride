use DesktopAudio version 1.0

module LinearEnvelope {
    ports: [
        mainOutputPort OutputPort {
            block: Output
        }
        mainInputPort InputPort {
            block: Input
        }
        propertyInputPort PropInputPort {
			name: "test"
            block: Test
        }
    ]
	blocks: [
        reaction PassThruReaction {
			ports: [
				mainOutputPort OutputPort {
					block: Output
				}
			]
            streams:    [
                Input * Test >> Output;
            ]
        }
    ]
    streams: [
        on >> PassThruReaction() >> Output;
    ]
}

signal UsedInReaction { default: 0.3 }

AudioIn[0] >> LinearEnvelope (test:UsedInReaction) >> AudioOut;