use DesktopAudio version 1.0

signal Accum {}

loop Loop {
	ports: [
		mainInputPort InputPort {
			block: Input
		}
	]
	blocks: [
		signal Counter { domain: InputPort.domain}
		switch CounterReset { domain: InputPort.domain}
	]
	streams: [
		Accum + 2 >> Accum;
		Counter + 1 >> Counter;
		[Counter, 10] >> Equal() >> CounterReset;
	]
	terminateWhen: CounterReset
}

switch Switch { default: on }

Switch >> Loop();
Accum >> AudioOut[1];
