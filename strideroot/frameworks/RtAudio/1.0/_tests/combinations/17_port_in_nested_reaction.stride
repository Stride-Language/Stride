use DesktopAudio version 1.0


module Test {
	ports: [
		mainOutputPort OutputPort {
			block: Output
			domain: OutputDomain
		}
		mainInputPort InputPort {
			block: Input
			domain: OutputDomain
		}
		propertyInputPort VarPort {
			name:"var"
			block: Var
		}
	]
	blocks: [
		reaction UsesVar {
			ports: [
			]
			streams: [
				Var + 0.001 >> Var;
			]
		}
		signal Output[2] {}
	]
	streams: [
		[Input, 0] >> Greater() >> UsesVar();
		Input * Var >> Output[1];
		Var >> Output[2]; # This Var should be connected to the bridge signal

	]
}

AudioIn[0] >> Test() >>AudioOut;
