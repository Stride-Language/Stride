module DebugPrint {
	ports: [
		mainInputPort ValueProperty {
			name: "value"
			block: Value
		}
		propertyInputPort TriggerPort {
			name: "trigger"
			block: Trigger
		}
	]
    blocks: [
		signal Value { default: 0.0 },
		switch Trigger { default: on },
		_debugPrintType DebugPrintBlock {}
		reaction Print {
			streams: [
				Value >> DebugPrintBlock();
			]
		}
    ]
    streams: [
		Trigger >> Print();
    ]
    meta: ""
}