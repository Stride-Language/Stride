type _StringType {
	typeName: "string"
	properties: [
		typeProperty Default {
			name: "default"
			types: [_StringLiteral]
			default: ""
			required: off
			meta: "Initial and default value"
		}
		typeProperty MaxSize {
			name: "maxSize"
			types: [""]
			default: none
			required: off
			meta: "Maximum size of the string"
		}
